/**index.wxss**/

.change {
  padding: 20rpx 40rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #8995a1;
}

.change .icon-drop {
  font-size: 26rpx;
  color: #8995a1;
}

.input-area {
  position: relative;
}

.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}

.input-area .textarea-wrap textarea {
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  box-sizing: border-box;
  margin: 0;
}
.input-area .trans-wrap{
  display: flex;
  justify-content: space-between;
}
.input-area .trans-wrap .translateButton {
  margin: 10rpx 12rpx;
}

.input-area .icon-close {
  position: absolute;
  right: 14rpx;
  top: 20rpx;
}


.result-area{
background: #fff;
min-height: 80rpx;
padding: 40rpx;
}
.result-area .result-title{
  color: #8995a1;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between
}
.result-area .result-title .icon-shoucang{
  color: #cdcdcd;
  padding-left: 20rpx;
  font-size: 40rpx;
}
.result-area .result-title .love{
  color: #d20a0a;
}
.result-area .result-text{
  padding: 20rpx;
}
